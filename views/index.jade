html(lang='en')
  head
    title= title
    script(src='/yui3?build/yui/yui-min.js')
    script
      YUI({
        comboBase: '/yui3?',
        combine: true,
        root: 'build/',
        groups: {
          contrib: {
            comboBase: '/yui3-contrib?',
            combine: true,
            root: '/build/',
            // explicitly list the modules and deps, this improves combohandler bundling of
            // script requests
            modules: {
              'my-module-bar': {
                requires: ['widget', 'substitute', 'event-resize']
              },
              'my-module-foo': {
                requires: ['my-module-bar']
              }
            },
            // pattern based module loading, combohandler won't group these
            patterns: {
              'my-': {},
              'mycss-': { type: 'css' }
            }
          }
        }
      }).use('widget', 'my-module-bar', function (Y) {
      });
